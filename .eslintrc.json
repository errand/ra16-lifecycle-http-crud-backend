{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "linebreak-style": 0,
        "import/prefer-default-export": "off",
        "no-unused-vars": "off",
        "no-underscore-dangle": "off",
        "max-len": "off",
        "arrow-parens": "off",
        "class-methods-use-this": "off",
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
    },
    "plugins": ["babel"],
    "parser": "@babel/eslint-parser"
}
